extends layout 

block content 

    h1 Genre: #{genre.name}

    div(style='margin-left:2; margin-top:20px')
        h4 books 

        dl 
            each book in genre_books 
                dt 
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else 
                p the genre has no books.
            